@model IEnumerable<Schooldatabase.Models.ClassDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Students)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Section)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Students)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClassName }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClassName }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClassName })
        </td>
    </tr>
}

</table>
